# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build express-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t express-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system express-api && \
          adduser --system -G express-api express-api

COPY dist/apps/express-api express-api
RUN chown -R express-api:express-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix express-api --omit=dev -f install

CMD [ "node", "express-api" ]
