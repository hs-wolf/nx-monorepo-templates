{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["vite/client"],
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": ["src/**/*.{spec,test}.{js,jsx,ts,tsx,vue}"],
  "include": ["src/**/*.{js,jsx,ts,tsx,vue}"]
}
